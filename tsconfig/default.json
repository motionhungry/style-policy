{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "extends": "@tsconfig/strictest",
  "compilerOptions": {
    "alwaysStrict": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": false,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": false
  },
  "exclude": ["node_modules"]
}
